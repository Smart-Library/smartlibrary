<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Groupings</h1>
      <span class="glyphicon glyphicon-edit"></span>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <ul class="list-group">
        <% @groupings.each do |g| %>
          <li class="list-group-item">
            <%= link_to g.name, grouping_path(g) %>
            <%= link_to 'Edit', edit_grouping_path(g), class: 'pull-right' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'New Grouping', new_grouping_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
