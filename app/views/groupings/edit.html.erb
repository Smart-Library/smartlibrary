<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Layout for <%= @grouping_name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="layout-area col-sm-12">
      <% @children.each do |child| %>
        <%= area_tag(child, 'draggable', child.type) %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= form_for @grouping, url: grouping_path, method: 'put' do |f| %>
        <%= f.submit 'Update Layout', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  window.onload = function () {
    setupInteractJS();
    registerOnUpdateLayout();
  }
</script>
